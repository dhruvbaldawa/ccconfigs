{
  "mcpServers": {
    "firecrawl": {
      "type": "stdio",
      "command": "pnpx",
      "args": [
        "firecrawl-mcp"
      ],
      "env": {
        "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}"
      }
    },
    "perplexity": {
      "type": "stdio",
      "command": "pnpx",
      "args": [
        "perplexity-mcp"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    },
    "context7": {
      "type": "stdio",
      "command": "pnpx",
      "args": [
        "@upstash/context7-mcp@latest"
      ],
      "env": {}
    },
    "sequential-thinking": {
      "type": "stdio",
      "command": "pnpx",
      "args": [
         "@modelcontextprotocol/server-sequential-thinking"
      ],
      "env": {}
    },
    "parallel-search": {
      "type": "http",
      "url": "https://search-mcp.parallel.ai/mcp",
      "headers": {
        "Authorization": "Bearer ${PARALLEL_API_KEY}"
      }
    }
  }
}
