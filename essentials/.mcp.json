{
  "mcpServers": {
    "context7": {
      "type": "stdio",
      "command": "pnpx",
      "args": [
        "@upstash/context7-mcp@latest"
      ],
      "env": {}
    },
    "sequential-thinking": {
      "type": "stdio",
      "command": "pnpx",
      "args": [
         "@modelcontextprotocol/server-sequential-thinking"
      ],
      "env": {}
    },
    "parallel-search": {
      "type": "stdio",
      "command": "pnpx",
      "args": [
        "mcp-remote",
        "https://search-mcp.parallel.ai/mcp",
        "--header", "authorization: Bearer ${PARALLEL_API_KEY}"
      ]
    },
    "perplexity": {
      "type": "stdio",
      "command": "pnpx",
      "args": [
        "perplexity-mcp"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    }
  }
}
