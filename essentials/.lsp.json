{
  "typescript": {
    "command": "pnpx",
    "args": ["typescript-language-server", "--stdio"],
    "extensionToLanguage": {
      ".ts": "typescript",
      ".tsx": "typescriptreact",
      ".js": "javascript",
      ".jsx": "javascriptreact",
      ".mjs": "javascript",
      ".mts": "typescript"
    },
    "restartOnCrash": true,
    "maxRestarts": 3
  },
  "python": {
    "command": "pnpx",
    "args": ["pyright-langserver", "--stdio"],
    "extensionToLanguage": {
      ".py": "python",
      ".pyi": "python"
    },
    "restartOnCrash": true,
    "maxRestarts": 3
  },
  "json": {
    "command": "pnpx",
    "args": ["vscode-json-language-server", "--stdio"],
    "extensionToLanguage": {
      ".json": "json",
      ".jsonc": "jsonc"
    }
  },
  "yaml": {
    "command": "pnpx",
    "args": ["yaml-language-server", "--stdio"],
    "extensionToLanguage": {
      ".yaml": "yaml",
      ".yml": "yaml"
    }
  },
  "bash": {
    "command": "pnpx",
    "args": ["bash-language-server", "start"],
    "extensionToLanguage": {
      ".sh": "shellscript",
      ".bash": "shellscript",
      ".zsh": "shellscript"
    }
  },
  "css": {
    "command": "pnpx",
    "args": ["vscode-css-language-server", "--stdio"],
    "extensionToLanguage": {
      ".css": "css",
      ".scss": "scss",
      ".less": "less"
    }
  },
  "html": {
    "command": "pnpx",
    "args": ["vscode-html-language-server", "--stdio"],
    "extensionToLanguage": {
      ".html": "html",
      ".htm": "html"
    }
  }
}
