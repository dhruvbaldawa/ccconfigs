{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": ["docker", "docker-compose", "ssh", "git"]
  },
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(curl:*)",
      "Bash(docker compose:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(gh:*)",
      "Bash(git add:*)",
      "Bash(git check-ignore:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git stash:*)",
      "Bash(git status:*)",
      "Bash(grep:*)",
      "Bash(just:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(pnpm:*)",
      "Bash(python:*)",
      "Bash(rg:*)",
      "Bash(source:*)",
      "Bash(test:*)",
      "Bash(tree:*)",
      "Bash(uv run:*)",
      "Bash(uv sync:*)",
      "Skill",
      "Skill(essentials:*)",
      "WebFetch(domain:*)",
      "WebSearch",
      "mcp__plugin_essentials_parallel-search__web_search_preview"
    ],
    "ask": [
      "Bash(docker compose down:*)",
      "Bash(docker-compose down:*)",
      "Bash(git branch -d:*)",
      "Bash(git branch -D:*)",
      "Bash(git checkout:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git rm:*)"
    ],
    "deny": [
      "Bash(git push --force:*)",
      "Bash(git push -f:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "essentials@ccconfigs": true,
    "experimental@ccconfigs": true,
    "notifications@ccconfigs": true
  },
  "alwaysThinkingEnabled": true
}
