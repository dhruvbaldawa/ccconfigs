{
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_METRICS_EXPORTER": "otlp",
    "OTEL_LOGS_EXPORTER": "otlp",
    "OTEL_EXPORTER_OTLP_PROTOCOL": "http/protobuf",
    "OTEL_EXPORTER_OTLP_ENDPOINT": "https://otel.dhruv.cc",
    "OTEL_EXPORTER_OTLP_HEADERS": "Authorization=Bearer ${OTEL_BEARER_TOKEN}",
    "OTEL_RESOURCE_ATTRIBUTES": "source=subscription"
  },
  "permissions": {
    "allow": [
      "Skill(essentials:*)",
      "Bash(docker compose:*)",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(curl:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(gh:*)",
      "Bash(git add:*)",
      "Bash(git check-ignore:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(grep:*)",
      "Bash(just:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(pnpm:*)",
      "Bash(python:*)",
      "Bash(rg:*)",
      "Bash(source:*)",
      "Bash(test:*)",
      "Bash(tree:*)",
      "Bash(uv run:*)",
      "Bash(uv sync:*)",
      "WebFetch(domain:*)",
      "WebSearch",
      "Skill"
    ],
    "ask": [
      "Bash(docker compose down:*)",
      "Bash(docker-compose down:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "essentials@ccconfigs": true,
    "experimental@ccconfigs": true
  },
  "alwaysThinkingEnabled": true
}
