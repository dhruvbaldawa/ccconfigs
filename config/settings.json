{
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(curl:*)",
      "Bash(docker compose:*)",
      "Bash(du:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(gh:*)",
      "Bash(git add:*)",
      "Bash(git check-ignore:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git stash:*)",
      "Bash(git status:*)",
      "Bash(git rev-parse:*)",
      "Bash(grep:*)",
      "Bash(just:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(pnpm:*)",
      "Bash(python3:*)",
      "Bash(python:*)",
      "Bash(rg:*)",
      "Bash(source:*)",
      "Bash(test:*)",
      "Bash(tree:*)",
      "Bash(uv run:*)",
      "Bash(uv sync:*)",
      "Bash(uv:*)",
      "Skill",
      "Skill(essentials:*)",
      "Skill(experimental:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:pypi.org)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebSearch",
      "Read(*)",
      "Search(*)",
      "mcp__plugin_essentials_context7__get-library-docs",
      "mcp__plugin_essentials_context7__query-docs",
      "mcp__plugin_essentials_context7__resolve-library-id",
      "mcp__plugin_essentials_firecrawl__firecrawl_scrape",
      "mcp__plugin_essentials_firecrawl__firecrawl_search",
      "mcp__plugin_essentials_parallel-search__web_fetch",
      "mcp__plugin_essentials_parallel-search__web_search_preview",
      "mcp__plugin_essentials_perplexity__reason",
      "mcp__plugin_essentials_perplexity__search",
      "mcp__plugin_essentials_sequential-thinking__sequentialthinking"
    ],
    "deny": ["Bash(git push --force:*)", "Bash(git push -f:*)"],
    "ask": [
      "Bash(docker compose down:*)",
      "Bash(docker-compose down:*)",
      "Bash(git branch -d:*)",
      "Bash(git branch -D:*)",
      "Bash(git checkout:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git rm:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "essentials@ccconfigs": true,
    "experimental@ccconfigs": true,
    "notifications@ccconfigs": true,
    "code-simplifier@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "php-lsp@claude-plugins-official": true
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "network": {
      "allowUnixSockets": [
        "~/.gnupg/S.gpg-agent",
        "~/.gnupg/S.gpg-agent.extra",
        "/run/user/*/gnupg/S.gpg-agent",
        "/run/user/*/gnupg/S.gpg-agent.extra"
      ]
    },
    "excludedCommands": [
      "docker",
      "docker-compose",
      "ssh",
      "git",
      "gpg",
      "gpg-agent"
    ]
  },
  "syntaxHighlightingDisabled": false,
  "autoUpdatesChannel": "latest",
  "skipDangerousModePermissionPrompt": true
}
