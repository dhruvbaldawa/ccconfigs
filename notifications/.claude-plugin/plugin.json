{
  "name": "notifications",
  "version": "0.3.0",
  "description": "Send notifications via Apprise when Claude Code needs input",
  "author": {
    "name": "Dhruv Baldawa"
  },
  "hooks": {
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/notify.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/notify.sh"
          }
        ]
      }
    ]
  }
}
