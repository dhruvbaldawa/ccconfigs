{
  "name": "todoist",
  "version": "1.0.0",
  "description": "Integrate Claude Code sessions with Todoist task management. Automatically moves tasks between sections (To Do → In Progress → For Review) as you work.",
  "author": {
    "name": "Dhruv Baldawa"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/session-start.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/session-start.sh"
          }
        ]
      }
    ]
  }
}
